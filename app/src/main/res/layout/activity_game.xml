            android:onClick="onLetterButtonClick" />
        <Button
            android:id="@+id/buttonZ"
            android:text="@string/letter_Z"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:onClick="onLetterButtonClick" />

    </GridLayout>

    <!-- Hangman display -->
    <ImageView
        android:id="@+id/imageViewHangman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hangman_0"
        android:layout_below="@id/gridLayoutLetters"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO" />

    <!-- Game Over message -->
    <TextView
        android:id="@+id/textViewGameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_over"
        android:textSize="24sp"
        android:layout_below="@id/imageViewHangman"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <!-- New Game button -->
    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:layout_below="@id/textViewGameOver"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewWordToGuessLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:padding="8dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageViewHangmanLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hangman_0"
        android:visibility="gone"
        android:contentDescription="TODO" />

    <GridLayout
        android:id="@+id/gridLayoutLettersLand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="8"
        android:rowCount="4"
        android:orientation="horizontal"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewGameOverLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonNewGameLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:visibility="gone"/>

</RelativeLayout>