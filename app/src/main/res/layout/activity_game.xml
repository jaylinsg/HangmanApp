<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Word to guess display -->
    <TextView
        android:id="@+id/textViewWordToGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/imageViewHangman"
        android:layout_centerHorizontal="true"
        android:padding="8dp"/>

    <!-- Letters buttons -->
    <GridLayout
        android:id="@+id/gridLayoutLetters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="4"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center">


    <!-- Letter Buttons -->
        <Button
            android:id="@+id/buttonA"
            android:text="@string/letter_A"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:onClick="onLetterButtonClick" />
        <Button
            android:id="@+id/buttonB"
            android:text="@string/letter_B"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:onClick="onLetterButtonClick" />
